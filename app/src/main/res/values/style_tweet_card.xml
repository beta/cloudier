<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TweetCard" parent="CardView.Light">
        <item name="android:layout_marginTop">@dimen/spacing_small</item>
        <item name="android:layout_marginStart">@dimen/spacing_small</item>
        <item name="android:layout_marginEnd">@dimen/spacing_small</item>

        <item name="android:background">@color/white</item>

        <item name="cardCornerRadius">2dp</item>
        <item name="cardElevation">2dp</item>
        <item name="cardMaxElevation">8dp</item>
    </style>

    <style name="TweetCard.Header" parent="">
        <item name="android:padding">@dimen/spacing_normal</item>
    </style>

    <style name="TweetCard.Header.Avatar" parent="">
        <item name="placeholderImage">@color/grey_300</item>
        <item name="roundAsCircle">true</item>
        <item name="viewAspectRatio">1</item>
    </style>

    <style name="TweetCard.Header.Nickname" parent="">
        <item name="android:textAppearance">@style/PrimaryTitle</item>
    </style>

    <style name="TweetCard.Header.Username" parent="">
        <item name="android:textAppearance">@style/SecondaryText</item>
    </style>

    <style name="TweetCard.Content" parent="">
        <item name="android:paddingStart">@dimen/spacing_normal</item>
        <item name="android:paddingEnd">@dimen/spacing_normal</item>
        <item name="android:paddingBottom">@dimen/spacing_normal</item>
        <item name="android:textAppearance">@style/PrimaryText</item>
    </style>

    <style name="TweetCard.Image" parent="">
        <item name="placeholderImage">@color/grey_300</item>
        <item name="viewAspectRatio">1.78</item>
    </style>

    <style name="TweetCard.Actions" parent="">
        <item name="android:padding">@dimen/spacing_small</item>
    </style>

    <style name="TweetCard.Actions.Action" parent="">
        <item name="android:minWidth">40dp</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="TweetCard.Actions.Action.Icon" parent="">
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="TweetCard.Actions.Action.WithText" parent="TweetCard.Actions.Action">
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
    </style>

    <style name="TweetCard.Actions.Action.WithText.Text" parent="">
        <item name="android:layout_marginStart">@dimen/spacing_small</item>
        <item name="android:textAppearance">@style/SecondaryText</item>
    </style>

</resources>
