<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="LoadMoreButton" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/spacing_extra</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="LoadMoreButton.Wrapper" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/spacing_extra</item>
        <item name="android:layout_margin">@dimen/spacing_small</item>
    </style>

    <style name="LoadMoreButton.Text" parent="">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Button</item>
    </style>

    <style name="LoadMoreButton.Progress" parent="Widget.AppCompat.ProgressBar">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

</resources>
