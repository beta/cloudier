<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TweetCard" parent="CardView.Light">
        <item name="android:layout_marginTop">@dimen/spacing_small</item>
        <item name="android:layout_marginStart">@dimen/spacing_small</item>
        <item name="android:layout_marginEnd">@dimen/spacing_small</item>

        <item name="android:background">@color/white</item>

        <item name="cardCornerRadius">2dp</item>
        <item name="cardElevation">2dp</item>
        <item name="cardMaxElevation">8dp</item>
    </style>

    <style name="TweetCard.Composer" parent="TweetCard">
    </style>

    <style name="TweetCard.Wrapper" parent="">
        <item name="android:clickable">true</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <style name="TweetCard.Composer.Wrapper" parent="TweetCard.Wrapper">
        <item name="android:clickable">false</item>
        <item name="android:background">@null</item>
    </style>

    <style name="TweetCard.Header" parent="">
        <item name="android:padding">@dimen/spacing_normal</item>
    </style>

    <style name="TweetCard.Header.Avatar" parent="">
        <item name="placeholderImage">@color/grey_300</item>
        <item name="roundAsCircle">true</item>
        <item name="viewAspectRatio">1</item>
    </style>

    <style name="TweetCard.Header.Nickname" parent="">
        <item name="android:textAppearance">@style/PrimaryTitle</item>
    </style>

    <style name="TweetCard.Header.Comment" parent="">
        <item name="android:textAppearance">@style/SecondaryText</item>
    </style>

    <style name="TweetCard.Header.Time" parent="">
        <item name="android:textAppearance">@style/SecondaryText</item>
    </style>

    <style name="TweetCard.Header.Username" parent="">
        <item name="android:textAppearance">@style/SecondaryText</item>
    </style>

    <style name="TweetCard.Header.WordCount" parent="">
        <item name="android:textAppearance">@style/SecondaryText</item>
    </style>

    <style name="TweetCard.Content" parent="">
        <item name="android:layout_marginStart">@dimen/spacing_normal</item>
        <item name="android:layout_marginEnd">@dimen/spacing_normal</item>
        <item name="android:textAppearance">@style/PrimaryText</item>
        <item name="android:lineSpacingExtra">@dimen/spacing_minimum</item>
    </style>

    <style name="TweetCard.Content.Mini" parent="">
        <item name="android:textAppearance">@style/PrimaryText</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TweetCard.Content.Composer" parent="">
        <item name="android:layout_marginStart">@dimen/spacing_normal</item>
        <item name="android:layout_marginEnd">@dimen/spacing_normal</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textAppearance">@style/PrimaryText</item>
        <item name="android:lineSpacingExtra">@dimen/spacing_minimum</item>
        <item name="android:gravity">top|start</item>
        <item name="android:hint">@string/text.hint.composer_content</item>
    </style>

    <style name="TweetCard.Image" parent="">
        <item name="android:src">@color/grey_300</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="aspectRatio">1.78</item>
        <item name="dominantMeasurement">width</item>
    </style>

    <style name="TweetCard.Image.Indicator" parent="">
        <item name="android:layout_margin">@dimen/spacing_normal</item>
        <item name="android:background">@drawable/background_indicator</item>
        <item name="android:drawableStart">@drawable/ic_collections_white_18dp</item>
        <item name="android:drawablePadding">@dimen/spacing_tiny</item>
        <item name="android:textAppearance">@style/PrimaryText</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TweetCard.Source.Deleted" parent="">
        <item name="android:padding">@dimen/spacing_normal</item>
        <item name="android:background">@color/grey_100</item>
    </style>

    <style name="TweetCard.Source.Deleted.Text" parent="">
        <item name="android:textAppearance">@style/SecondaryText</item>
    </style>

    <style name="TweetCard.Source" parent="CardView.Light">
        <item name="cardBackgroundColor">@color/grey_100</item>
        <item name="cardCornerRadius">0dp</item>
        <item name="cardElevation">0dp</item>
        <item name="cardMaxElevation">0dp</item>
    </style>

    <style name="TweetCard.Source.Wrapper" parent="">
        <item name="android:clickable">true</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <style name="TweetCard.Source.Details" parent="">
        <item name="android:paddingTop">@dimen/spacing_normal</item>
        <item name="android:paddingBottom">@dimen/spacing_normal</item>
    </style>

    <style name="TweetCard.Source.Nickname" parent="TweetCard.Header.Nickname">
        <item name="android:layout_marginStart">@dimen/spacing_normal</item>
    </style>

    <style name="TweetCard.Source.Time" parent="TweetCard.Header.Time">
        <item name="android:layout_marginEnd">@dimen/spacing_normal</item>
    </style>

    <style name="TweetCard.Source.Content" parent="">
        <item name="android:layout_marginStart">@dimen/spacing_normal</item>
        <item name="android:layout_marginEnd">@dimen/spacing_normal</item>
        <item name="android:textAppearance">@style/PrimaryText</item>
        <item name="android:lineSpacingExtra">@dimen/spacing_minimum</item>
    </style>

    <style name="TweetCard.Source.Image" parent="TweetCard.Image">
    </style>

    <style name="TweetCard.Source.Image.Indicator" parent="TweetCard.Image.Indicator">
    </style>

    <style name="TweetCard.Actions" parent="">
        <item name="android:padding">@dimen/spacing_small</item>
    </style>

    <style name="TweetCard.Actions.Action" parent="">
        <item name="android:minWidth">40dp</item>
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="TweetCard.Actions.Action.Icon" parent="">
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="TweetCard.Actions.Action.WithText" parent="TweetCard.Actions.Action">
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <style name="TweetCard.Actions.Action.WithText.Text" parent="">
        <item name="android:layout_marginStart">@dimen/spacing_small</item>
        <item name="android:textAppearance">@style/SecondaryText</item>
    </style>

    <style name="TweetCard.Composer.Images" parent="">
        <item name="android:paddingStart">@dimen/spacing_small</item>
        <item name="android:paddingEnd">@dimen/spacing_normal</item>
    </style>

    <style name="TweetCard.Composer.Images.Wrapper" parent="">
        <item name="android:layout_marginBottom">@dimen/spacing_normal</item>
        <item name="android:scrollbarSize">4dp</item>
    </style>

    <style name="TweetCard.Composer.Images.Image" parent="">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">120dp</item>
    </style>

    <style name="TweetCard.Composer.Images.Image.Wrapper" parent="">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:layout_marginStart">@dimen/spacing_small</item>
    </style>

    <style name="TweetCard.Composer.Images.Image.Delete" parent="">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_gravity">top|end</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:src">@drawable/ic_close_white_24dp</item>
    </style>

    <style name="TweetCard.Composer.Images.Image.Indicator" parent="">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_gravity">top|end</item>
    </style>

</resources>
